<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="planSimple"
            type="com.drtaa.core_model.plan.PlanSimple" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="3dp"
        app:strokeColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/tv_plan_title"
                style="@style/jua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@{planSimple.travelName}"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="여행 제목이 들어가요" />

            <TextView
                android:id="@+id/tv_plan_start_date_title"
                style="@style/ptd_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="렌트 시작일: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_plan_title" />

            <TextView
                android:id="@+id/tv_plan_start_date"
                style="@style/ptd_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@{planSimple.travelStartDate}"
                app:layout_constraintBottom_toBottomOf="@id/tv_plan_start_date_title"
                app:layout_constraintStart_toEndOf="@+id/tv_plan_start_date_title"
                app:layout_constraintTop_toTopOf="@id/tv_plan_start_date_title"
                tools:text="날짜 들어가용" />

            <TextView
                android:id="@+id/tv_plan_end_date_title"
                style="@style/ptd_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="렌트 종료일: "
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_plan_start_date_title" />

            <TextView
                android:id="@+id/tv_plan_end_date"
                style="@style/ptd_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@{planSimple.travelEndDate}"
                app:layout_constraintBottom_toBottomOf="@id/tv_plan_end_date_title"
                app:layout_constraintStart_toEndOf="@+id/tv_plan_end_date_title"
                app:layout_constraintTop_toTopOf="@id/tv_plan_end_date_title"
                tools:text="날짜 들어가용" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_in_progress"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>