<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="socialUser"
            type="com.drtaa.core_model.sign.SocialUser" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".HomeFragment">

        <TextView
            android:id="@+id/textView7"
            style="@style/ptd_extra_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:text="DRTAA"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_hello"
            style="@style/ptd_medium"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:autoSizeMaxTextSize="28sp"
            android:autoSizeTextType="uniform"
            android:lineSpacingExtra="3dp"
            android:text='@{(!socialUser.name.isEmpty()) ? socialUser.name + "님,\n안녕하세요!\n어디로 가시나요?" : socialUser.nickname + "님,\n안녕하세요!\n어디로 가시나요?"}'
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/guideline3"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:text="이현진님,\n안녕하세요!\n어디로 가시나요?" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_home_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/jururu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:setImgUrl="@{socialUser.profileImageUrl}" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/home_bottom" />

        <ImageView
            android:id="@+id/btn_home_car_rent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_home_taxi"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintWidth_percent="0.4"
            app:srcCompat="@drawable/ic_home_rent" />

        <ImageView
            android:id="@+id/btn_home_taxi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_home_car_rent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintWidth_percent="0.4"
            app:srcCompat="@drawable/ic_home_taxi" />

        <ImageView
            android:id="@+id/img_home_maincar"
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_home_taxi"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_car_image" />

        <TextView
            android:id="@+id/tv_home_rent_car"
            style="@style/jua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="렌트"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="@+id/btn_home_car_rent"
            app:layout_constraintTop_toTopOf="@+id/btn_home_car_rent" />

        <TextView
            android:id="@+id/tv_home_taxi"
            style="@style/jua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="택시"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="@+id/btn_home_taxi"
            app:layout_constraintTop_toTopOf="@+id/btn_home_taxi" />

        <ImageView
            android:id="@+id/img_home_minirent"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_home_car_rent"
            app:layout_constraintEnd_toEndOf="@+id/btn_home_car_rent"
            app:srcCompat="@drawable/ic_home_minirent" />

        <TextView
            android:id="@+id/tv_home_rent_car_detail"
            style="@style/ptd_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="손쉬운 여행을 위해"
            android:textColor="#5f5f5f"
            app:layout_constraintStart_toStartOf="@+id/tv_home_rent_car"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_rent_car" />

        <ImageView
            android:id="@+id/img_home_minitaxi"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_home_taxi"
            app:layout_constraintEnd_toEndOf="@+id/btn_home_taxi"
            app:srcCompat="@drawable/ic_home_minitaxi" />

        <TextView
            android:id="@+id/tv_home_taxi_detail"
            style="@style/ptd_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부르면 찾아오는 택시"
            android:textColor="#5f5f5f"
            app:layout_constraintStart_toStartOf="@+id/tv_home_taxi"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_taxi" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_home_rent_history"
            style="@style/btn_long_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="렌트 기록"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_home_car_rent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_home_plan"
            style="@style/btn_long_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:text="일정 관리"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_home_rent_history" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="220dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="216dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>