<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="socialUser"
            type="com.drtaa.core_model.sign.SocialUser"/>

        <variable
            name="homeviewModel"
            type="com.drtaa.feature_home.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".HomeFragment">

        <TextView
            android:id="@+id/textView7"
            style="@style/ptd_extra_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:text="DRTAA"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_hello"
            style="@style/ptd_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text='@{socialUser.name +"님,\n안녕하세요!\n어디로 가시나요?"}'
            android:lineSpacingExtra="3dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_home_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/jururu"
            app:setImgUrl="@{socialUser.profileImageUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/home_bottom" />

        <ImageView
            android:id="@+id/btn_home_car_rent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_home_taxi"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_percent="0.4"
            app:srcCompat="@drawable/ic_home_rent" />

        <ImageView
            android:id="@+id/btn_home_taxi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_home_car_rent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintWidth_percent="0.4"
            app:srcCompat="@drawable/ic_home_taxi" />

        <ImageView
            android:id="@+id/img_home_maincar"
            android:layout_width="210dp"
            android:layout_height="180dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_home_taxi"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_car_image" />



        <TextView
            android:id="@+id/tv_home_rent_car"
            style="@style/jua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="렌트"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="@+id/btn_home_car_rent"
            app:layout_constraintTop_toTopOf="@+id/btn_home_car_rent" />

        <TextView
            style="@style/jua"
            android:textSize="23sp"
            android:id="@+id/tv_home_taxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="택시"
            app:layout_constraintStart_toStartOf="@+id/btn_home_taxi"
            app:layout_constraintTop_toTopOf="@+id/btn_home_taxi" />

        <TextView
            android:id="@+id/tv_home_rent_car_detail"
            style="@style/ptd_light"
            android:textColor="#5f5f5f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="손쉬운 여행을 위해"
            app:layout_constraintStart_toStartOf="@+id/tv_home_rent_car"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_rent_car" />

        <TextView
            style="@style/ptd_light"
            android:textColor="#5f5f5f"
            android:id="@+id/tv_home_taxi_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부르면 찾아오는 택시"
            app:layout_constraintStart_toStartOf="@+id/tv_home_taxi"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_taxi" />

        <Button
            android:id="@+id/btn_home_rent_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="렌트 기록"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_home_payment" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>