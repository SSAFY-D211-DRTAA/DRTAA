<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.naver.maps.map.MapView
            android:id="@+id/mv_taximap"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.naver.maps.map.MapView>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_anchor="@+id/mv_taximap"
            app:layout_anchorGravity="center"
            android:layout_marginBottom="40dp"
            app:srcCompat="@drawable/ic_center_marker" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_taxi_search_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:clickable="true"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <include
                android:id="@+id/layout_taxi_search_bottom_sheet"
                layout="@layout/fragment_taxi_search_bottom_sheet"
                android:background="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>